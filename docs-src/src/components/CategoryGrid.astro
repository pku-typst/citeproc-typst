---
import type { Locale } from "../i18n";
import { useTranslation } from "../i18n";

interface Category {
  name: string;
  total: number;
  compiled: number;
}

interface Props {
  locale: Locale;
  categories: Category[];
}

const { locale, categories } = Astro.props;
const t = useTranslation(locale);
---

{
  categories.length > 0 && (
    <details class="mt-4 group">
      <summary class="cursor-pointer font-medium py-2 text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-2">
        <span class="transition-transform group-open:rotate-90">â–¶</span>
        <span>{t.category.viewByCategory}</span>
        <span class="text-xs bg-muted px-2 py-0.5 rounded-full">
          {categories.length} {t.category.categories}
        </span>
      </summary>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 mt-3 pt-3 border-t border-border">
        {categories.map((cat) => {
          const rate = cat.total > 0 ? (cat.compiled / cat.total) * 100 : 0;
          return (
            <div class="flex justify-between items-center px-3 py-2 bg-muted/50 rounded-lg text-sm">
              <span class="font-medium truncate mr-2">{cat.name}</span>
              <div class="flex items-center gap-2 shrink-0">
                <span class="text-success font-medium">
                  {cat.compiled}/{cat.total}
                </span>
                <span class="text-xs text-muted-foreground">
                  ({rate.toFixed(0)}%)
                </span>
              </div>
            </div>
          );
        })}
      </div>
    </details>
  )
}
