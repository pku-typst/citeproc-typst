---
interface Props {
  value: number | string;
  label: string;
  variant?: "default" | "success" | "warning";
}

const { value, label, variant = "default" } = Astro.props;

const valueColorClass = {
  default: "text-primary",
  success: "text-success",
  warning: "text-destructive",
}[variant];
---

<div
  class="rounded-lg border border-border bg-card p-6 text-center shadow-sm"
>
  <div class={`text-4xl font-bold ${valueColorClass}`}>{value}</div>
  <div class="text-sm text-muted-foreground mt-1">{label}</div>
</div>
